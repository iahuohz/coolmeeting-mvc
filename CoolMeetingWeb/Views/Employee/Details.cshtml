@model CoolMeetingWeb.Models.Employee

@{
    ViewBag.Title = "员工";
}

<h2>详情</h2>

<div class="form-horizontal">
    <h4>员工信息</h4>
    <hr />
    <div class="form-group">
        @Html.LabelFor(model => model.EmployeeName, new { @class = "control-label col-md-2" })
        <div class="form-control-static">
            @Html.DisplayFor(model => model.EmployeeName)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.UserName, new { @class = "control-label col-md-2" })
        <div class="form-control-static">
            @Html.DisplayFor(model => model.UserName)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
        <div class="form-control-static">
            @Html.DisplayFor(model => model.Email)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Gender, new { @class = "control-label col-md-2" })
        <div class="form-control-static">
            @CoolMeetingWeb.Models.TermDescription.Gender[(int)Model.Gender]
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PhotoUrl, new { @class = "control-label col-md-2" })
        <div class="form-control-static">
            <img src='@("/Photos/" + Model.PhotoUrl)' width="150" height="150" />
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DepartmentID, new { @class = "control-label col-md-2" })
        <div class="form-control-static">
            @Html.DisplayFor(model => Model.Department.DepartmentName)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 form-control-static">
            <button type="button" onclick="window.history.back();" class="btn btn-default">确定</button>
        </div>
    </div>
</div>
