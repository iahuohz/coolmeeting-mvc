@model CoolMeetingWeb.Models.Meeting

@{
    ViewBag.Title = "会议";
}

<h2>会议详情</h2>

<div class="form-horizontal">
    <h4>会议信息</h4>
    <hr />
    <div class="form-group">
        @Html.LabelFor(model => model.MeetingName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="form-control-static">
            @Html.DisplayFor(model => model.MeetingName)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NumberOfParticipants, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="form-control-static">
            @Html.DisplayFor(model => model.NumberOfParticipants)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.StartTime, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="form-control-static">
            @Html.DisplayFor(model => model.StartTime)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.EndTime, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="form-control-static">
            @Html.DisplayFor(model => model.EndTime)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="form-control-static">
            @Html.DisplayFor(model => model.Description)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.RoomID, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="form-control-static">
            @Html.DisplayFor(model => model.RoomReserved.RoomCode)
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">参会人员</label>
        <div class="col-md-8">
            <div class="form-control-static">
                @foreach (var employee in Model.Participants)
                {
                    <span class="col-md-1">
                        @employee.EmployeeName
                    </span>
                }
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-4">
            <button type="button" class="btn btn-primary" onclick="window.history.back();">确定</button>
        </div>
    </div>
</div>