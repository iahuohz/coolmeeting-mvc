@using CoolMeetingWeb.Models
@model CoolMeetingWeb.Models.Room

@{
    ViewBag.Title = "会议室";
}

<h2>查看会议室</h2>

<div class="form-horizontal">
    <h4>会议室信息</h4>
    <hr />
    <div class="form-group">
        @Html.LabelFor(model => model.RoomCode, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="form-control-static">
            @Html.DisplayFor(model => model.RoomCode)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.RoomName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="form-control-static">
            @Html.DisplayFor(model => model.RoomName)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Capacity, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="form-control-static">
            @Html.DisplayFor(model => model.Capacity)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Descrption, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="form-control-static">
            @Html.DisplayFor(model => model.Descrption)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.RoomStatus, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            <div class="form-control-static">
                @{
                    var status = CoolMeetingWeb.Models.TermDescription.RoomStatus[(int)(Model.RoomStatus)];
                    switch (Model.RoomStatus)
                    {
                        case RoomStatusType.Active:
                            <span class="label label-success">@status</span>
                            break;
                        case RoomStatusType.Maintained:
                        <span class="label label-warning">@status</span>
                            break;
                        case RoomStatusType.Retired:
                        <span class="label label-danger">@status</span>
                            break;
                    }
                }
            </div>
        </div>

    </div>

    <div class="form-group">
        <div class="col-md-offset-2 form-control-static">
            @Html.ActionLink("返回", "Index", null, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>