@model CoolMeetingWeb.Models.Room

@{
    ViewBag.Title = "会议室";
}

<h2>新增会议室</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>会议室信息</h4>
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.RoomCode, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.RoomCode, new { @class = "form-control" } )
            </div>
            <div class="form-control-static">
                @Html.ValidationMessageFor(model => model.RoomCode)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RoomName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.RoomName, new{ @class = "form-control" })
            </div>
            <div class="form-control-static">
                @Html.ValidationMessageFor(model => model.RoomName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Capacity, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.Capacity, new { @class = "form-control" })
            </div>
            <div class="form-control-static">
                @Html.ValidationMessageFor(model => model.Capacity)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Descrption, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.TextAreaFor(model => model.Descrption,new { @class = "form-control", rows = 6 })
            </div>
            <div class="form-control-static">
                @Html.ValidationMessageFor(model => model.Descrption)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-4">
                @Html.ValidationMessage("opresult")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-4">
                <input type="submit" value="确定" class="btn btn-primary" />
                @Html.ActionLink("取消", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}