@model CoolMeetingWeb.Models.Department

@{
    ViewBag.Title = "部门";
}

<h2>新增部门</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <legend>部门信息</legend>
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.DepartmentName, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.DepartmentName, new { @class = "form-control" } )
            </div>
            <div class="form-control-static">
                @Html.ValidationMessageFor(model => model.DepartmentName)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-4">
                @Html.ValidationMessage("opresult")
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-4">
                <input type="submit" value="确定" class="btn btn-primary" />
                @Html.ActionLink("取消", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}
